
mixin _renderImageBlock(data)
    //- data 
            class: class bao boc khoi co chua hinh anh --> the a
            href: href cua the a
            target:  target cua the a
            id: id cua the a
            iconImage: {} -> dinh nghia cho  component iconImage
            content: {} -> dinh nghia cho  component content
    if data
        a( class=`${data.class  ? data.class: ''}` 
            href=data.href
            target=data.target 
            id=data.id)
            if data.iconImage 
                +renderIconImage(data.iconImage)
            if data.content 
                +renderContent(data.content)

mixin _renderDescBlock(data)
    //- data attribute
            class: class bao boc khoi co chua noi dung
            id: id
            text: {} -> dinh nghia cho  component text
            content: {} -> dinh nghia cho  component content
    div(class=`${data.class ? data.class: ''}` id=data.id)
        if data.text 
            +renderText(data.text)
        if data.content 
            +renderContent(data.content)

mixin renderCard(data) 
    //- data attribute
            class: class bao boc khoi bao boc cua card
            isVertical: true/false --> sap xep theo chieu doc hay ngang
            cardImageBlock: {} --> dinh nghia cho  hoi chua hinh anh
            cardDescBlock: {} --> dinh nghia cho  hoi chua noi dung
        
    div(class=`d-flex flex-wrap ${data.isVertical ? '': 'flex-column'} ${data.class ? data.class : ''}`)
        if data.cardImageBlock
            +_renderImageBlock(data.cardImageBlock)
        if data.cardDescBlock
            +_renderDescBlock(data.cardDescBlock)


