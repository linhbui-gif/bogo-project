mixin renderCardCoupon(data)
    if data.coupon
        .card.coupon
            .card__avatar.d-flex.align-items-center
                .card__avatar-image
                    img(src="assets/images/home/coupon-avatar.png", alt="")
                .card__avatar-box 
                    h4.box__title=data.title
                    p.box__site.mt-3=data.site
            .card__sale 
                +renderButton(data)
            .card__content
                h4.card__content-name= data.name      
                p.card__content-month.d-flex.align-items-center 
                  img(src="assets/images/svg/alarm.svg", alt="").mr-3 
                  span= data.month 
            .card__footer
                +renderButton({
                    href:'#',
                    text: {text: 'GET DEAL'},
                    class:'hvr-curl-top-right color-white custom-hover-button mt-5 w-100 d-block text-center background-blue',
                })
    else 
        .card.discount.coupon.d-flex.mt-5.align-items-center
            .card__avatar
                .card__avatar-image
                    img(src="assets/images/home/085fd8f7819dee3b716da73d3b2de61c@2x.png", alt="")
                    p.amazon.text-center=data.amazon
            .card__content
               .card__content-box.text-center
                    p=data.discount 
                    p.mt-4.mb-4.color-blue.scale.font-weight-bold=data.per 
                    a(href=`${data.href}`).color-blue=data.shop
                
